{
    "manifest_version": 3,
    "name": "Hack Club Audio Player",
    "version": "1.1",
    "permissions": ["storage"],
    "host_permissions": [
        "*://hackclub.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.hackclub.com/*"
            ],
            "js": [
                "content.js"
            ],
            "world": "ISOLATED"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "audio/christmas.mp3",
                "audio/welcometohackclub.mp3",
                "images/cursor.png",
                "images/cursorclicked.png",
                "images/cursorgrabbed.png"
            ],
            "matches": [
                "*://*.hackclub.com/*"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "512": "icons/hackclub-512.png"
        }
    },
    "icons":{
        "512": "icons/hackclub-512.png"
    }
}